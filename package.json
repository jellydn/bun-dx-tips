{
  "name": "bun-tips",
  "type": "module",
  "module": "server.ts",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun --hot run server.ts",
    "dev:inspect": "bun --inspect server.ts",
    "dev:watch": "bun run --watch server.ts",
    "start": "bun run server.ts"
  },
  "dependencies": {
    "close-with-grace": "2.3.0",
    "express": "5.1.0"
  },
  "devDependencies": {
    "@productsway/db": "workspace:*",
    "@productsway/logger": "workspace:*",
    "@types/express": "5.0.5",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
